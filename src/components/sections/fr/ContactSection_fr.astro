---
// Impor dependensi yang diperlukan.
import AuthBtn from "@components/ui/buttons/AuthBtn.astro";
import ContactIconBlock from "@components/ui/blocks/ContactIconBlock.astro";
import TextInput from "@components/ui/forms/input/TextInput.astro";
import EmailContactInput from "@components/ui/forms/input/EmailContactInput.astro";
import PhoneInput from "@components/ui/forms/input/PhoneInput.astro";
import TextAreaInput from "@components/ui/forms/input/TextAreaInput.astro";
import Icon from "@components/ui/icons/Icon.astro";

// Mendefinisikan variabel yang akan digunakan di komponen ini
const title: string = "Hubungi Kami";
const subTitle: string =
  "Punya pertanyaan atau ingin berdiskusi tentang proyek? Hubungi HOFE dan mari ciptakan solusi terbaik bersama menggunakan alat dan layanan kami.";
const formTitle: string = "Isi formulir di bawah ini";
const formSubTitle: string = "Kami akan menghubungi Anda dalam 1-2 hari kerja.";
---

<!-- Hubungi Kami -->
<section class="mx-auto max-w-[85rem] px-4 py-10 sm:px-6 lg:px-8 lg:py-14">
  <div class="mx-auto max-w-2xl lg:max-w-5xl">
    <div class="text-center">
      <h1
        class="text-balance text-2xl font-bold tracking-tight text-neutral-800 dark:text-neutral-200 md:text-4xl md:leading-tight"
      >
        {title}
      </h1>
      <p class="mt-1 text-pretty text-neutral-600 dark:text-neutral-400">
        {subTitle}
      </p>
    </div>

    <div class="mt-12 grid items-center gap-6 lg:grid-cols-2 lg:gap-16">
      <div class="flex flex-col rounded-xl p-4 sm:p-6 lg:p-8">
        <h2
          class="mb-8 text-xl font-bold text-neutral-700 dark:text-neutral-300"
        >
          {formTitle}
        </h2>
        <!-- Formulir untuk input pengguna dengan berbagai jenis input -->
        <!-- Setiap bidang menggunakan komponen input yang berbeda untuk jenis data spesifik (teks, email, telepon, dan area teks)-->
        <form>
          <div class="grid gap-4">
            <div class="grid grid-cols-1 gap-4 sm:grid-cols-2">
              <TextInput
                id="hs-firstname-contacts"
                label="Nama Depan"
                name="hs-firstname-contacts"
              />
              <TextInput
                id="hs-lastname-contacts"
                label="Nama Belakang"
                name="hs-lastname-contacts"
              />
            </div>
            <EmailContactInput id="hs-email-contacts" />
            <PhoneInput id="hs-phone-number" />
            <TextAreaInput
              id="hs-about-contacts"
              label="Detail"
              name="hs-about-contacts"
            />
          </div>

          <div class="mt-4 grid">
            <AuthBtn title="Kirim Pesan" />
          </div>

          <div class="mt-3 text-center">
            <p class="text-sm text-neutral-600 dark:text-neutral-400">
              {formSubTitle}
            </p>
          </div>
        </form>
      </div>

      <!-- ContactIconBlock digunakan untuk menampilkan berbagai metode kontak, termasuk kunjungan kantor, email, knowledgebase, dan FAQ -->
      <div class="divide-y divide-neutral-300 dark:divide-neutral-700">
        <ContactIconBlock
          heading="Pusat Pengetahuan"
          content="Jelajahi semua artikel di pusat pengetahuan kami."
          isLinkVisible={true}
          linkTitle="Kunjungi panduan & tutorial"
          linkURL="#"
          isArrowVisible={true}
          ><Icon name="question" />
        </ContactIconBlock>

        <ContactIconBlock
          heading="FAQ"
          content="Cari jawaban cepat dan jelas untuk pertanyaan umum."
          isLinkVisible={true}
          linkTitle="Kunjungi FAQ"
          linkURL="#"
          isArrowVisible={true}
          ><Icon name="chatBubble" />
        </ContactIconBlock>

        <ContactIconBlock
          heading="Kunjungi kantor kami"
          content="ID HOFE"
          isAddressVisible={true}
          addressContent="Indonesia"
          ><Icon name="mapPin" />
        </ContactIconBlock>

        <ContactIconBlock
          heading="Hubungi kami melalui email"
          content="Lebih suka dengan tulisan? Kirim email ke"
          isLinkVisible={true}
          linkTitle="support@HOFE.id"
          linkURL="#"
          ><Icon name="envelopeOpen" />
        </ContactIconBlock>
      </div>
    </div>
  </div>
</section>
